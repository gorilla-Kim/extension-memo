{
  "name": "Gorilla Extension",
  "description": "Memo App",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_icon": {
      "16": "/images/icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "open:window": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "open memo"
    }
  },
  "permissions": ["storage", "activeTab", "scripting"]
}